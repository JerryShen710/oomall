    <insert id="addLog" parameterType="mallLog" useGeneratedKeys="true" keyProperty="id">
        insert into log(admin_id, ip, type, action, status, gmt_create, gmt_modified, action_id)
        values (#{adminId}, #{ip}, #{type}, #{action}, #{statusCode}, sysdate(), sysdate(), #{actionId})
    </insert>

    <select id="findLogById" parameterType="Integer" resultType="mallLog">
        select id,
               admin_id,
               ip,
               type,
               action,
               status as status_code,
               gmt_create,
               gmt_modified,
               action_id
        from log where id = #{id}
    </select>

    <select id="getAllLogs" resultType="mallLog">
        select id,
               admin_id,
               ip,
               type,
               action,
               status as status_code,
               gmt_create,
               gmt_modified,
               action_id
        from log
    </select>
    
    <select id="findLogsByCondition" resultType="mallLog">
        select id,
               admin_id,
               ip,
               type,
               action,
               status as status_code,
               gmt_create,
               gmt_modified,
               action_id
        from log
        order by ${sort}  ${order} , id desc
        limit ${limit * page - limit}, ${limit * page}
    </select>
</mapper>